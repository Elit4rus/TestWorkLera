<Page x:Class="TestWork.View.PageAddStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWork.View"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="600"
      Title="PageAddStudent" Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="Введите ФИО" FontSize="25"/>
        <TextBox x:Name="NameTb" Grid.Column="2"/>

        <TextBlock Text="Группа" Grid.Row="2" FontSize="25"/>
        <TextBox x:Name="GroupTb" Grid.Row="2" Grid.Column="2"/>

        <Button Name="AddBtn" Content="Добавить" Grid.Row="4" FontSize="25" Click="AddBtn_Click"/>
        <Button Name="CancleBtn" Content="Назад" Grid.Row="4" Grid.Column="2" FontSize="25" Click="CancleBtn_Click"/>
    </Grid>
</Page>
