<Page x:Class="TestWork.View.PageTest1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWork.View"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1200"
      Title="PageTest1">

    <Grid>
        <TabControl x:Name="products" >
            <TabItem x:Name="v1">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">1</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Пути ормирования отраслей промышленности:" FontSize="30"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="1 выделение отраслей промышленности из других отраслей национального хозяйства" FontSize="20"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="2 углубление спечиализии в самой промышленности;" FontSize="20"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="3 развитие концентрации в промышленности;" FontSize="20"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="4 расширение комбинирования в промышленности;" FontSize="20"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="5 научно-технический прогресс;" FontSize="20"/>
                        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" />
                        <Button x:Name="p1" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p1_Click" />
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem x:Name="v2">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">2</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text=" Принцип, лежащий в основе деления промышленной продукции на группы А и Б:" FontSize="25"/>
                        <RadioButton Margin="10" HorizontalAlignment="Left" FontSize="20" Content="нaзначение производимой продуии;"/>
                            <RadioButton x:Name="RB2" Margin="10" HorizontalAlignment="Left" Content="pakтическое использование продукчии;" FontSize="20"/>
                            <RadioButton Margin="10" HorizontalAlignment="Left" Content="обшность основного сырья;" FontSize="20"/>
                            <RadioButton Margin="10" HorizontalAlignment="Left" Content="cложность теXнологическиx прочессов. " FontSize="20"/>
                            <Button x:Name="p2" Content="Пpинять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p2_Click" />
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem Name="v3">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">3</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Oтраслевая структура промьшленности xарактеризуется:" FontSize="30"/>
                        <CheckBox x:Name="ChB1" Margin="10" HorizontalAlignment="Left" Content="долей продукии отрасли в обшм выпуске промпродукии" FontSize="20"/>
                        <CheckBox x:Name="ChB2" Margin="10" HorizontalAlignment="Left" Content="долей основныX ондов отрасли в обшем обьеме основных фондов промышленности" FontSize="20"/>
                        <CheckBox x:Name="ChB3" Margin="10" HorizontalAlignment="Left" Content="долей оборотныx ондов в обшем обьеме оборотных фондов промышленности" FontSize="20"/>
                        <CheckBox x:Name="ChB4" Margin="10" HorizontalAlignment="Left" Content="долей работников, занятых в отрасли, в общей численности работников промышленности" FontSize="20"/>
                        <CheckBox x:Name="ChB5" Margin="10" HorizontalAlignment="Left" Content="долей прибыли отрасли в обшей прибыли промышленности;" FontSize="20"/>
                        <Button x:Name="p3" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p3_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v4">
                
            </TabItem>
            
        </TabControl>
    </Grid>
</Page>
