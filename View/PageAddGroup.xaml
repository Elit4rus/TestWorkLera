<Page x:Class="TestWork.View.PageAddGroup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWork.View"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
      Title="PageAddGroup">

    <Grid Margin="20" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Введите группу" FontSize="25"/>
        <TextBox x:Name="AddGroupTb" Grid.Column="2"/>

        <Button x:Name="AddGroupBtn" Grid.Row="2" Content="Добавить" FontSize="25" Click="AddGroupBtn_Click"/>
        <Button x:Name="CancelBtn" Grid.Row="2" Grid.Column="2" Content="Назад" FontSize="25" Click="CancelBtn_Click"/>
    </Grid>
</Page>
