<Page x:Class="TestWork.View.PageV"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWork.View"
      mc:Ignorable="d" 
      d:DesignHeight="270" d:DesignWidth="700"
      Title="PageV" Background="White">

    <Grid>
        <StackPanel x:Name="StackPanel1" Orientation="Vertical" Margin="20">
            <TextBlock Text="Выберите группу" FontSize="20"/>

            <ComboBox Name="CmbGroup" FontWeight="bold" FontSize="20" SelectionChanged="CmbGroup_SelectionChanged"/>
            <TextBlock Text="Выберите студента" FontSize="20"/>
            <ComboBox  x:Name="CmbStudent" FontWeight="Bold" FontSize="20"/>
            <TextBlock Text="Выберите тест" FontSize="20"/>
            <ComboBox Name="CmbTest" FontWeight="Bold" FontSize="20"/>
            <Button Content="Начать" Name="BtnStart"  FontSize="20" FontWeight="Bold" Margin="20" Click="BtnStart_Click"/>

        </StackPanel>
    </Grid>
</Page>
