<Page x:Class="TestWork.View.PageTeacher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWork.View"
      mc:Ignorable="d" 
      d:DesignHeight="270" d:DesignWidth="700"
      Title="PageTeacher" Background="White">

    <Grid Margin="20"
          >
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Frame x:Name="SecondFrame" NavigationUIVisibility="Hidden" Grid.RowSpan="7"/>

        <Button Name="AddStudent" Content="Добавить студента" Click="AddStudent_Click"/>
        
        <Button Name="AddGroupBtn" Content="Добавить группу" Grid.Row="2" Click="AddGroupBtn_Click"/>
        
        <Button Name="StudentMarkBtn" Content="Список студентов с оценками" Grid.Row="4" Click="StudentMarkBtn_Click"/>
        
        <Button Name="DelStudentBtn" Content="Удалить студента" Grid.Row="6" Click="DelStudentBtn_Click" />
        
        <Button Name="EscapeBtn" Content="Выйти в главное меню" Grid.Row="8" Click="EscapeBtn_Click"/>
    </Grid>
</Page>
